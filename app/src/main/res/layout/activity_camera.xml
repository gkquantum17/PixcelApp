<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CamaraIntentActivity">


    <TextureView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/textureView"
        android:layout_height="match_parent" />
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/photoButton"
        android:layout_marginBottom="16dp"
        android:onClick="takePhoto"
        android:background="@drawable/photo_capture_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/cancel_photo_capture"/>
    <ImageButton
        android:layout_width="50dp"
        android:layout_marginBottom="16dp"
        android:layout_height="50dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btnToggleGallery"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/access_image_gallery"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_above="@+id/photoButton"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        />

</RelativeLayout>